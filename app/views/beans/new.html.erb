<% provide(:title, "Registration") %>

<div class="row">
	<h1>新規登録</h1>

	<%= render '/beans/back_coffee_list' %>

	<div class="registration_form">
		<%= form_for(@bean) do |f| %>
			<div class="name">
				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control', id: 'bean_name', style: "width:200px;" %>
			</div>
			<div class="registraion_picture">
				<span class="picture">
					<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
				</span>
			</div>
			<div class="done_btn">
				<%= f.submit 'コーヒーを登録', class: 'btn btn-primary' %>
			</div>
		<% end %>

		<%= render '/beans/alert_picture' %>
	</div>
</div>
